{
  "name": "akta",
  "private": true,
  "version": "0.0.1",
  "description": "",
  "license": "MIT",
  "homepage": "https://github.com/aktajs/akta#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aktajs/akta.git"
  },
  "bugs": {
    "url": "https://github.com/aktajs/akta/issues"
  },
  "workspaces": [
    "./packages/*"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">= 7.0.0"
  },
  "scripts": {
    "watch": "cd packages/template && npm run watch",
    "build": "npm run build --workspaces",
    "build:all": "npm run build:clear && npm run build && npm run build:types",
    "build:types": "tsc --build",
    "build:clear": "rimraf packages/**/dist packages/**/tsconfig.tsbuildinfo",
    "test": "npm run test --workspaces",
    "publish": "npm run build:all && npm run test && npm publish --workspaces"
  },
  "dependencies": {
    "@types/node": "^16.4.2",
    "esbuild": "^0.12.15",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5"
  }
}
