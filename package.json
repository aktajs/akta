{
  "name": "akta",
  "private": true,
  "version": "0.0.1",
  "description": "",
  "license": "MIT",
  "homepage": "https://github.com/aktajs/akta#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aktajs/akta.git"
  },
  "bugs": {
    "url": "https://github.com/aktajs/akta/issues"
  },
  "workspaces": [
    "./packages/*"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "cd packages/template && npm run dev",
    "start": "cd packages/template && npm run start",
    "build": "npm run build --workspaces",
    "build:all": "npm run build:clear && npm run build && npm run build:types",
    "build:types": "tsc --build",
    "build:clear": "rimraf packages/**/dist packages/**/tsconfig.tsbuildinfo",
    "test": "npm run test --workspaces",
    "publish": "npm run build:all && npm run test && npm publish --workspaces"
  },
  "dependencies": {
    "@types/node": "^17.0.21",
    "esbuild": "^0.14.25",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2"
  }
}
