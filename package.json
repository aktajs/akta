{
  "name": "akta",
  "private": true,
  "version": "0.0.1",
  "description": "",
  "license": "MIT",
  "homepage": "https://github.com/aktajs/akta#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aktajs/akta.git"
  },
  "bugs": {
    "url": "https://github.com/aktajs/akta/issues"
  },
  "workspaces": [
    "./packages/*"
  ],
  "engines": {
    "node": ">=16",
    "pnpm": ">=6"
  },
  "scripts": {
    "dev": "cd packages/template && pnpm dev",
    "start": "cd packages/template && pnpm start",
    "build": "pnpm -r build",
    "build:all": "pnpm build:clear && pnpm build && pnpm build:types",
    "build:types": "tsc --build",
    "build:clear": "rimraf packages/**/dist packages/**/tsconfig.tsbuildinfo",
    "test": "pnpm -r test",
    "publish": "pnpm build:all && pnpm test && pnpm -r publish"
  },
  "dependencies": {
    "@types/node": "^17.0.21",
    "esbuild": "^0.14.25",
    "esbuild-plugin-raw": "^0.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2"
  },
  "devDependencies": {
    "@akta/plugin": "workspace:*",
    "vite": "^2.8.6"
  }
}
